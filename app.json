{
  "expo": {
    "name": "Stress Congress 2026",
    "slug": "stress-congress-2026",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "stresscongress2026",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stresscongress.app2026",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan attendee QR codes for check-in."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1E40AF",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.stresscongress.app2026",
      "permissions": ["CAMERA"]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E40AF"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Stress Congress 2026 to access your camera to scan QR codes."
        }
      ],
      "expo-secure-store",
      "expo-web-browser"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
